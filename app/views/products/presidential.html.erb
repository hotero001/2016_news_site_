      <%=image_tag("/assets/rsz_republican.png")%>
      <%=image_tag("/assets/rsz_republican.png")%>
      </center>
    </div>
  </div>
</div>

<br/>
<center>
<div class="john" style="width:350px; border:1px solid #000; border-radius: 20px; background-color: #ff1a1a; color:#ffffff;">
  <h2>Presidential Race</h2>
</div>
</center>
<br/><br/>

<div class="top-stories">
  <div class='one-third column'>
    <h3><center>John Kasich</center></h3>
    <center><%= image_tag "/assets/kasich.jpg"%></center>
    <h4><center>Delegate Count: 148</center></h4>
  </div>
  <div class='one-third column'>
    <h3><center>Donald Trump</center></h3>
    <center><%= image_tag "/assets/trump.jpg"%></center> 
    <h4><center>Delegate Count: 845</center></h4>
  </div>
  <div class='one-third column'>
    <h3><center>Ted Cruz</center></h3>
    <center><%= image_tag "/assets/CA.jpg"%></center>
    <h4><center>Delegate Count: 559</center></h4>
  </div>
</div>

<h3><center>Delegates Needed to Win Republican Nomination: 1237</center></h3>

<br/><center>
<div id="map" style="width: 500px; height: 300px;"></div>
<div id="clicked-state"></div>
</center>

<script>
$('#map').usmap({
  // The click action
  click: function(event, data){
    $('#clicked-state')
      //data.name+'kasich'
      .text(data.name+' Delegate Results: TRUMP('+data.trump+')'+ '| CRUZ('+data.cruz+') '+'| KASICH('+data.kasich+')')
      .parent().effect('highlight', {color: '#C7F464'}, 2000);
  }
});
</script>

<br/><br/><br/><br/>
 
<div class="headlines">
	<%@products.each do |product|%>
    <div class="row">
    	<%if product.category_id == 1%>
        <center><div class="dog" style="width:850px; border: 5px solid #e6e6e6; border-radius: 50px; padding: 5px; background-color: #e6e6e6;">
          <center><h2><%=product.title%></h2></center>
          <center><%= link_to image_tag("/assets/#{@products[-7].image_url}"), @products[-7]%></center>
          <center><h4><%=product.description%></h4></center>
        </div></center><br/>
      <%end%>
    </div>
  <%end%>
</div>
