<style type="text/css" media="all">
  body { margin-top: 20px; }
  body {margin-left: 50px; }
  body {margin-right: 50px;}
  body {margin-bottom: 20px;}

  .boxes {
    border: 5px solid #e6e6e6;
    border-radius: 10px;
    padding: 5px;
    background-color: #e6e6e6;
  }

  #Menu,
  #Menu ul {
    list-style: none;
    padding: 10px;
  }
  #Menu {
    float: left;
  }
  #Menu > li {
    float: left;
  }
  #Menu li a {
    display: block;
    height: 2em;
    line-height: 2em;
    padding: 0 1.5em;
    text-decoration: none;
  }
  #Menu ul {
    position: absolute;
    display: none;
    z-index: 999;
  }
  #Menu ul li a {
    width: 80px;
  }
  #Menu li:hover ul {
    display: block;
  }
</style>
</head>

<div class="container">
  <ul id="Menu">
    <a class="button button-primary" href="/">Home</a>
    <a class="button button-primary" href="/senate">Senate</a>
    <a class="button button-primary" href="/congressional">Congressional</a>
    <a class="button button-primary" href="/contact">Contact Us</a>
  </ul>
</div>

<div class='markup'>
  <div class='view-container container'>
    <div class='landing-view'>
      <center><h1>2016 GOP Elections</h1></center>
      <center>
      <%=image_tag("/assets/rsz_republican.png")%>
      <%=image_tag("/assets/rsz_republican.png")%>
